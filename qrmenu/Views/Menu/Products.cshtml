@model List<qrmenu.Models.Product>
@{
    string restaurantLogo = ViewBag.RestaurantLogo as string;
    string facebookUrl = ViewBag.FacebookUrl as string;
    string instagramUrl = ViewBag.InstagramUrl as string;
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #fff;
        color: #222;
        margin: 0;
        padding: 0;
    }

   
    .restaurant-logo {
        text-align: center;
        margin: 30px 0 50px 0;
    }

        .restaurant-logo img {
            height: 140px;
            width: auto;
        }

    
    .social-icons {
        text-align: center;
        margin-bottom: 50px;
    }

        .social-icons a {
            margin: 0 20px;
            color: #2b2a29;
            font-size: 45px;
            transition: color .3s;
        }

            .social-icons a:hover {
                color: #d4a373;
            }


    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: flex-start;
    }

    .product-item {
        flex: 0 0 calc(50% - 15px); 
        background: #fff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform .2s;
        height: auto;
    }

        .product-item:hover {
            transform: translateY(-5px);
        }

        .product-item img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            display: block;
        }

    
    .product-details {
        padding: 15px;
        background: #fff;
        border-top: 1px solid #ddd;
        display: flex;
        flex-direction: column;
    }

    .product-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-title {
        font-size: 18px;
        font-weight: 600;
        margin: 0;
    }

    .product-desc {
        font-size: 14px;
        color: #666;
        margin: 8px 0;
        min-height: 40px;
    }

   
    .product-price {
        font-size: 18px;
        font-weight: 700;
        color: dimgrey;
        text-align: right;
        border-top: 1px solid rgba(0,0,0,0.1);
        padding-top: 8px;
        margin-top: 8px;
    }

    .not-available {
        font-size: 14px;
        color: #c0392b;
        font-weight: 600;
        margin-bottom: 5px;
    }

    
    @@media (max-width: 992px) {
        .product-item

    {
        flex: 0 0 calc(50% - 15px);
    }

    }

    @@media (max-width: 768px) {
        .product-item

    {
        flex: 0 0 100%;
        height: auto;
    }

    .product-item img {
        height: auto;
    }

    .product-details {
        width: 95%;
        margin: 0 auto;
        padding: 12px 15px;
    }

    .product-price {
        text-align: right;
    }

    }

    .site-footer {
        text-align: left;
        padding: 20px 0;
        background-color: black; 
        color: white;
        font-size: 14px;
        margin-top: 50px;
    }
</style>

@if (!string.IsNullOrEmpty(restaurantLogo))
{
    <div class="restaurant-logo">
        <img src="@restaurantLogo" alt="Restoran Logo" />
    </div>
    <div class="social-icons">
        @if (!string.IsNullOrEmpty(facebookUrl))
        {
            <a href="@facebookUrl" target="_blank"><i class="fab fa-facebook-square"></i></a>
        }
        @if (!string.IsNullOrEmpty(instagramUrl))
        {
            <a href="@instagramUrl" target="_blank"><i class="fab fa-instagram-square"></i></a>
        }
    </div>
}

<div class="product-list">
    @foreach (var item in Model.OrderByDescending(p => p.IsActive))
    {
        <div class="product-item">
            <img src="@item.ImageUrl" alt="@item.Name" />
            <div class="product-details">
                <div class="product-top">
                    <div class="product-title">@item.Name</div>
                    @if (!item.IsActive)
                    {
                        <div class="not-available">Şu anda mevcut değil</div>
                    }
                </div>
                <div class="product-desc">@item.Description</div>
                <div class="product-price">@item.Price ₺</div>
            </div>
        </div>
    }
</div>

<footer class="site-footer">
    <div class="container">
        <p>© by THEMARINE</p>
    </div>
</footer>