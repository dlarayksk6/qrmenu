@model qrmenu.Models.Restaurant
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Restoran Bilgileri";
}

<h2>Restoran Bilgileri</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Restoran Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LogoUrl" class="form-label">Mevcut Logo URL</label>
        <input asp-for="LogoUrl" class="form-control" readonly />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Yeni Logo Yükle</label> 
        <input type="file" name="logoFile" class="form-control" />
    </div>
    @if (!string.IsNullOrEmpty(Model.LogoUrl))
    {
        <div class="mb-3">
            <label>Mevcut Logo:</label><br />
            <img src="@Model.LogoUrl" alt="Logo" style="height: 80px;" />
        </div>

    }
    <div class="mb-3">
        <label asp-for="FacebookUrl" class="form-label">Facebook URL</label>
        <input asp-for="FacebookUrl" class="form-control" placeholder="https://www.facebook.com/..." />
        <span asp-validation-for="FacebookUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InstagramUrl" class="form-label">Instagram URL</label>
        <input asp-for="InstagramUrl" class="form-control" placeholder="https://www.instagram.com/..." />
        <span asp-validation-for="InstagramUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
